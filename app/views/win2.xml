<Alloy>
	<Window class="container">
		<View id="profileContainer">
				<View id="profileHorizontal">
					<View id="profileImage">
						<Label class="LblTxt">Profile Image</Label>
						<Button id="upload" onClick="uploadPhoto">Upload image</Button>
						<Button id="upload" onClick="searchPhoto">Search Photo</Button>
						
					</View>
					<View id="profileBasic">
						<Label class="LblTxt" id="username"></Label>
						<Label class="LblTxt" id="firstname"></Label>
						<Label class="LblTxt" id="lastname"></Label>
						<Label class="LblTxt" id="email"></Label>
						<Label class="LblTxt" id="userID"></Label>
					</View>
				</View>
				<View id="profileVertical">
					<View id="profileSpecific">
						<Label class="LblTxt">Profile Specific Info</Label>
					</View>
					<View id="profileClasses">
						<Label class="LblTxt">Classes</Label>
					</View>
				</View>
		</View>
		
	</Window>
</Alloy>